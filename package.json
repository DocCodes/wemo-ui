{
  "name": "wemo-ui",
  "productName": "Wemo UI",
  "version": "1.0.0",
  "description": "Wemo desktop application.",
  "main": "main",
  "scripts": {
    "start": "electron .",
    "build-mac": "electron-packager . --overwrite --asar --platform=darwin --arch=all --prune=true --out=builds --app-copyright\"Copyright © 2018 Evan Young\" --icon=\"assets/icons/mac/icon.icns\" --app-bundle-id=\"com.evanyoung.wemoui\" --app-category-type=\"public.app-category.utilities\"",
    "build-win": "electron-packager . --overwrite --asar --platform=win32  --arch=all --prune=true --out=builds --app-copyright\"Copyright © 2018 Evan Young\" --icon=\"assets/icons/win/icon.ico\"  --win32metadata.CompanyName=\"Evan Young\" --win32metadata.FileDescription=\"Wemo desktop application.\" --win32metadata.ProductName=\"WemoUI\"",
    "build-lux": "electron-packager . --overwrite --asar --platform=linux  --arch=all --prune=true --out=builds --app-copyright\"Copyright © 2018 Evan Young\" --icon=\"assets/icons/png/1024x1024.png\"",
    "test": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DocCodes/wemo-ui.git"
  },
  "keywords": [
    "Wemo"
  ],
  "author": "Evan Elias Young",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DocCodes/wemo-ui/issues"
  },
  "homepage": "https://github.com/DocCodes/wemo-ui#readme",
  "devDependencies": {
    "electron": "^2.0.6",
    "electron-packager": "^12.1.0",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "application-config": "^1.0.1",
    "events": "^3.0.0",
    "node-ssdp": "^3.3.0",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "url": "^0.11.0",
    "xml2js": "^0.4.19",
    "xmlbuilder": "^10.0.0"
  }
}
